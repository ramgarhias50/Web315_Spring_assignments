@page
@model Web_courses.Pages_Courses.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<form>
    <p>
        Title: <input type="text" asp-for="SearchString" />
        <input type="submit" value="Filter" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Credits)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].LaunchDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].Instructor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Course[0].coursesCategory)
            </th>
            <th>
                @Html.DisplayNameFor(model =>model.Course[0].Ratings)
            </th>
            <th>
                @Html.DisplayNameFor(model =>model.Course[0].reviews)
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Course)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Credits)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.LaunchDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Instructor)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.coursesCategory)
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.Ratings )
                </td>
                <td>
                    @Html.DisplayFor(modelItem =>item.reviews)
                </td>

                <td>
                    <a asp-page="./Edit" asp-route-id="@item.CourseID">Edit</a> |
                    <a asp-page="./Details" asp-route-id="@item.CourseID">Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.CourseID">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
